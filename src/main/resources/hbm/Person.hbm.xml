<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.maktab.model">

    <class name="Person" table="PERSONS">
        <id name="id" >
            <generator class="increment"/>
        </id>
        
        <property name="name" type="string" not-null="true" unique="true" />
        
        <set name="writtenBooks" inverse="true" >
        	<key column="authorId" />
        	<one-to-many class="Book" />
        </set>

        <set name="groups" table="GROUP_MEMBERS" inverse="true" >
        	<key column="memberId" />
        	<many-to-many class="Group" column="groupId" />
        </set>
    </class>

</hibernate-mapping>
